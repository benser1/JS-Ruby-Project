<h1>All Posts</h1>
<%= page_entries_info @posts %><br>
<br><%= paginate @posts %>

<div class="allPostsTable">
<table>
  <tr>
    <th><h2><%= sortable "title" %></h2></th>
    <th><h2><%= sortable "updated_at", "Date" %></h2></th>
    <th><h2><%= sortable "user_id", "Author" %></h2></th>
  </tr>

  <% @posts.each do |post| %>
<tr>
    
    <td><%= link_to post.title, user_post_path(User.find_by_id(post.user_id), post), :class => "green" %></td>
    <td><%= last_updated post %></td>
    <td><%= post.user.name %></td>
</tr>
<% end %>
</table>
</div>

