<h2>Categories</h2>

<% @categories.each do |category| %>
<ul>
  <li><%= link_to category.name, category_path(category) %><% if current_user.admin? %><br>
  <br><%= button_to "Delete", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" } %>--------------------------
<% end %></li>
</ul>

<% end %>

