<h2>Categories</h2>
<%= page_entries_info @categories %>
<%= paginate @categories %>

<% @categories.each do |category| %>
<ul>
  <li><h4><%= link_to category.name, category_path(category) %></h4><% if current_user.admin? %>
  <%= link_to "Delete", category, method: :delete, data: { confirm: "Are you sure you want to delete this category?" } %> - 
  <%= link_to "Edit", edit_category_path(category.id) %><br>
  --------------------------
<% end %></li>
</ul>

<% end %><bR>

<% if current_user.admin? %>
      <h4><%= link_to "Create Category", new_category_path %><br>
<% end %>

