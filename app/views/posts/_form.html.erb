<%= form_for(@post, method: :post) do |f| %>
  <%= f.label "Title:" %><br />
  <%= f.text_field :title, :required => true %><br><br>

  <%= f.label "Write content below:" %><br>
  <%= f.text_area :content, :required => true, :cols => "50", :rows => "10" %> <br>

  <br><%= f.submit "Submit Post" %>

<% end %>