
<%= form_for @post do |f| %>

  <%= f.label "Title:" %><br >
  <%= f.text_field :title, :required => true, :class => "content_box" %><br>

  <br><%= f.label "Write content below:" %><br>
  <%= f.text_area :content, :required => true, :cols => "50", :rows => "10", :class => "content_box" %> <br>

  <br><%= f.label "Category:" %><br>
  <%= select_tag :category_id, options_from_collection_for_select(Category.all, :id, :name, @post.category_id), :class => "content_box" %> <br>
  
  <!-- Nest to create a new category -->

  <br><%= f.submit :class => "btn btn-success" %>

<% end %>

