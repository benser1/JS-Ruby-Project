<h1>Blog Posts</h1>


  <% @posts.each do |post| %>

    <h2><%= post.title %></h2>
    <p><em><%= last_updated post %></em></p>
    <p><%= post.content %></p>
    <%= link_to "View Post", post_path(post.id) %>
    <%= link_to "Edit", edit_post_path(post.id) %>
    <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>


<% end %>


