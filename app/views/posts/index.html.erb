<h1>Blog Posts</h1>


  <% @posts.each do |post| %>

    <h2><%= post.title %></h2> <% if post.user.name != nil %>
      <em>Written by: <strong><%= post.user.name %></strong></em>
    <% else %>
      <em>Written by: <strong><%= post.user.email %></strong></em>
    <% end %>
    <p><em><%= last_updated post %></em></p>
    <p><%= post.content %></p>

    <%= link_to "View Post", post_path(post.id) %> - 
    <%= link_to "Edit", edit_post_path(post.id) %> - 
    <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>


<% end %>


