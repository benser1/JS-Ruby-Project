<%= page_entries_info @posts %>
<%= paginate @posts %>

<% @posts.each do |post| %>
  <ul>
  <li><%= link_to post.title, user_post_path(@user, post)%></li>
  <div id="body-<%= post.id %>"><%= truncate post.content %></div>
  <button class="js-more" data-id="<%= post.id %>">More...</button>
  </ul>
<% end %>